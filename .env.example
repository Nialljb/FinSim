# ============================================================================
# FinSim Environment Configuration
# ============================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control

# ============================================================================
# Application Settings
# ============================================================================
DEBUG=False
BASE_URL=http://localhost:8501
SECRET_KEY=your-secret-key-change-in-production

# ============================================================================
# Database Configuration
# ============================================================================
# For local development (SQLite)
DATABASE_URL=sqlite:///finsim.db

# For production (PostgreSQL on Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# ============================================================================
# Auth0 Configuration (Optional - New!)
# ============================================================================
# Set to True to enable Auth0 OAuth authentication
ENABLE_AUTH0=False

# Your Auth0 tenant domain (without https://)
# Example: finsim-prod.us.auth0.com
AUTH0_DOMAIN=

# Your Auth0 application client ID
AUTH0_CLIENT_ID=

# Your Auth0 application client secret (keep secure!)
AUTH0_CLIENT_SECRET=

# Callback URL for OAuth redirect (must match Auth0 settings)
# For local: http://localhost:8501/
# For production: https://yourdomain.com/
AUTH0_CALLBACK_URL=http://localhost:8501/

# Optional: API audience (leave empty if not using Auth0 APIs)
AUTH0_AUDIENCE=

# ============================================================================
# Email Configuration (SMTP)
# ============================================================================
# Required for email verification and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@finstk.com
SMTP_FROM_NAME=FinSTK

# ============================================================================
# Feature Flags
# ============================================================================
FREE_SIMULATION_LIMIT=10
ENABLE_PDF_EXPORT=True
ENABLE_EMAIL_VERIFICATION=True
ENABLE_ANALYTICS=True

# ============================================================================
# Currency Settings
# ============================================================================
DEFAULT_CURRENCY=GBP

# ============================================================================
# External APIs (Optional)
# ============================================================================
# Currency conversion API (if using external service)
# EXCHANGE_RATE_API_KEY=

# Analytics/Monitoring (if using external service)
# SENTRY_DSN=
# GOOGLE_ANALYTICS_ID=

# ============================================================================
# Development Only
# ============================================================================
# Uncomment for detailed SQL logging
# SQLALCHEMY_ECHO=True
